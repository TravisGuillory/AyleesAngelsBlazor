@page "/addpost"



<header class="masthead">
    <div class="overlay"></div>
    <div class="container mb-2">
        <h3>Add a Post</h3>
        <div class="row">
            <div class="col col-md-12">
                <div class="editor">
                    <input @bind=@Title placeholder="Title" class="form-control m-1" />
                    <textarea @bind=@Post placeholder="Write your post" rows="5" class="form-control m-1"></textarea>
                    <button class="btn btn-primary m-1" @onclick="@SavePost">Post</button>
                    <br />
                </div>
            </div>
        </div>
    </div>
</header>


